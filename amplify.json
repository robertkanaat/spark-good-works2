{
  "customHeaders": [
    {
      "pattern": "**/*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "pattern": "index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "customRules": [
    {
      "source": "/favicon.ico",
      "target": "/favicon-custom.ico",
      "status": "200"
    },
    {
      "source": "/<*>.xml",
      "target": "/<*>.xml",
      "status": "200"
    },
    {
      "source": "</^[^.]+$|.(?!(css|gif|ico|jpg|jpeg|js|png|txt|svg|woff|woff2|ttf|map|json|webp|mp3|mp4|pdf)$)([^.]+$)/>",
      "target": "/index.html",
      "status": "200"
    }
  ]
}
